<header class="text-center mb-4">
  <h1>Welcome to the Millian Library</h1>
  <p class="lead">Explore books, authors, genres, and more.</p>
</header>

<!-- Recent Likes -->
<section class="mt-5">
  <h2>Recent Likes</h2>
  <ul class="list-group mb-4">
    <% @recent_likes&.each do |like| %>
          <li class="list-group-item">
            <%= link_to like.member.name, member_path(like.member) %> liked <%= link_to like.book.title, book_path(like.book) %>
          </li>
    <% end %>
  </ul>
</section>

<section class="mt-5">
  <h2>You Are Currently Reading</h2>
  <div class="container">
    <div class="row">
      <% @books.each do |book| %>
        <%= render partial: 'books/book', locals: { book: book } %>
      <% end %>
    </div>
  </div>
</section>
