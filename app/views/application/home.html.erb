  <!-- Highlighted Genres -->
  <h3 class="mt-5 mb-3">Explore by Genre</h3>
  <div class="row">
    <% @genres&.each do |genre| %>
      <div class="col-md-3">
        <a href="<%= genre_path(genre) %>" class="btn btn-outline-secondary btn-block mb-3"><%= genre.name %></a>
      </div>
    <% end %>
  </div>

  <!-- Featured Series -->
  <h3 class="mt-5 mb-3">Popular Series</h3>
  <div class="row">
    <% @series&.each do |series| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title"><%= series.title %></h5>
            <p class="card-text">By <%= series.author.name %></p>
            <a href="<%= series_path(series) %>" class="btn btn-primary">View Series</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>

<!-- Userâ€™s Lists -->
<section class="mt-5">
  <h2>Your Lists</h2>
  <div class="list-group mb-4">
    <% @reading_lists&.each do |list| %>
      <a href="<%= reading_list_path(list) %>" class="list-group-item list-group-item-action">
        <%= list.name %> (<%= list.books.count %> books)
      </a>
    <% end %>
  </div>
  <a href="<%= new_reading_list_path %>" class="btn btn-outline-secondary">Create New List</a>
</section>

<!-- User's Wishlist -->
<section class="mt-5">
  <h2>Your Wishlist</h2>
  <ul class="list-group mb-4">
    <% @wishlist_books&.each do |book| %>
      <li class="list-group-item">
        <%= link_to book.title, book_path(book) %> by <%= book.author.name %>
      </li>
    <% end %>
  </ul>
</section>

<!-- User Ratings -->
<section class="mt-5">
  <h2>Your Rated Books</h2>
  <ul class="list-group">
    <% @ratings&.each do |rating| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= link_to rating.book.title, book_path(rating.book) %>
        <span class="badge bg-primary rounded-pill"><%= rating.value %> / 5</span>
      </li>
    <% end %>
  </ul>
</section>

<!-- Recent Activity Section -->
<section class="mt-5">
  <h2>Recent Activity</h2>
  <ul class="list-unstyled">
    <% @recent_activities&.each do |activity| %>
      <li class="media mb-3">
        <div class="media-body">
          <p><%= activity.user.name %> <%= activity.action %> "<%= activity.book.title %>" on <%= activity.created_at.strftime("%B %d, %Y") %>.</p>
        </div>
      </li>
    <% end %>
  </ul>
</section>


<!-- Footer -->
<footer class="text-center mt-5">
