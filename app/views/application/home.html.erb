</header>

<!-- Recent Likes -->
<section class="mt-5">
  <h2>Recent Likes</h2>
  <ul class="list-group mb-4">
    <% @recent_likes&.each do |like| %>
          <li class="list-group-item">
            <%= link_to like.member.name, member_path(like.member) %> liked <%= link_to like.book.title, book_path(like.book) %>
          </li>
    <% end %>
  </ul>
</section>
