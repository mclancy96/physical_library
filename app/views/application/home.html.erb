<header class="text-center mb-4">
  <h1>Welcome to Your Digital Library</h1>
  <p class="lead">Explore books, authors, genres, and more.</p>
</header>

<!-- Recent Likes -->
<!-- Currently Reading -->

<!-- Userâ€™s Lists -->
<section class="mt-5">
  <h2>Your Lists</h2>
  <div class="list-group mb-4">
    <% @reading_lists&.each do |list| %>
      <a href="<%= reading_list_path(list) %>" class="list-group-item list-group-item-action">
        <%= list.name %> (<%= list.books.count %> books)
      </a>
    <% end %>
  </div>
  <a href="<%= new_reading_list_path %>" class="btn btn-outline-secondary">Create New List</a>
</section>

<!-- User's Wishlist -->
<section class="mt-5">
  <h2>Your Wishlist</h2>
  <ul class="list-group mb-4">
    <%# @wishlist_books&.each do |book| %>
<!--      <li class="list-group-item">-->
<!--        <%#= link_to book.title, book_path(book) %> by <%#= book.author.name %>-->
<!--      </li>-->
    <%# end %>
  </ul>
</section>

<!-- User Ratings -->
<section class="mt-5">
  <h2>Your Rated Books</h2>
  <ul class="list-group">
    <%# @ratings&.each do |rating| %>
<!--      <li class="list-group-item d-flex justify-content-between align-items-center">-->
        <%#= link_to rating.book.title, book_path(rating.book) %>
<!--        <span class="badge bg-primary rounded-pill"><%#= rating.value %> / 5</span>-->
<!--      </li>-->
    <%# end %>
  </ul>
</section>

<!-- Recent Activity Section -->
<section class="mt-5">
  <h2>Recent Activity</h2>
  <ul class="list-unstyled">
    <% @recent_activities&.each do |activity| %>
      <li class="media mb-3">
        <div class="media-body">
          <p><%= activity.user.name %> <%= activity.action %> "<%= activity.book.title %>" on <%= activity.created_at.strftime("%B %d, %Y") %>.</p>
        </div>
      </li>
    <% end %>
  </ul>
</section>


<!-- Footer -->
<footer class="text-center mt-5">
  <p>&copy; <%= Time.current.year %> Library App. All rights reserved.</p>
</footer>
