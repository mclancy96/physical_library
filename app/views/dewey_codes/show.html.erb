<div class="container">
  <h1><%= @dewey_code.code %></h1>
  <p><%= @dewey_code.description %></p>
  <hr>
  <h2>Parent</h2>
  <% if @dewey_code.parent %>
    <div class="list-group">
      <%= link_to dewey_code_path(@dewey_code.parent), class: 'list-group-item list-group-item-action' do%>
        <div class="d-flex justify-content-center">
          <h5 class="mb-1"><%= @dewey_code.parent.code %></h5>
        </div>
        <p class="mb-1"><%=@dewey_code.parent.description %></p>
      <% end %>
    </div>
  <% else %>
    <h5>This code has no parent</h5>
  <% end %>

  <hr>
  <h2>Children</h2>
  <div class="list-group">
    <% if @dewey_code.children %>
      <% @dewey_code.children.each do |child| %>
        <%= link_to dewey_code_path(child), class: 'list-group-item list-group-item-action' do%>
          <div class="d-flex justify-content-center">
            <h5 class="mb-1"><%= child.code %></h5>
          </div>
          <p class="mb-1"><%=child.description %></p>
        <% end %>
      <% end %>
    <% else %>
    <h5>This code has no child codes</h5>
    <% end %>

  </div>
</div>